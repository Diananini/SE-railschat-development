<!-- Modal -->
<div class="modal fade" id="panel_modal_signup" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header" style="padding:35px 50px;">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4><span class="glyphicon glyphicon-lock"></span> 注册</h4>
      </div>
      <div class="modal-body" style="padding:40px 50px;">

        <%= form_for(:session, url: users_create_path, method: :post, html: {role: 'form'}) do |f| %>

            <div class="form-group">
              <%= f.label :email, "请填写详细信息：" %>
              <div class="input-group">
                <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                <%= f.text_field :name, class: 'form-control', placeholder: "输入用户名" %>
              </div>
            </div>
            
            <div class="form-group">
              <div class="input-group">
                <div class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></div>
                <%= f.email_field :email, class: 'form-control', placeholder: "输入邮箱" %>
              </div>
            </div>
            
            <div class="form-group">
              <div class="input-group">
                <div class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></div>
                <%= f.password_field :password, class: 'form-control', placeholder: "输入密码" %>
              </div>
            </div>
            
            <div class="form-group">
              <div class="input-group">
                <div class="input-group-addon"><span class="glyphicon glyphicon-earphone"></span></div>
                <%= f.number_field :phonenumber, class: 'form-control', placeholder: "输入电话号码" %>
              </div>
            </div>

            <div class="checkbox">
              <label><%= f.check_box :remember_me %>记住我</label>
            </div>

            <%= button_tag(type: "submit", class: "btn btn-primary btn-block") do %>
                <span class="glyphicon glyphicon-off"></span> 注册
            <% end %>

        <% end %>
      </div>

      <div class="modal-footer">
        <p class="text-center">已有账号? 请登录</p>
      </div>

    </div>

  </div>

</div>

<script>
  $(document).ready(function () {
    $("#signup_panel").click(function (e) {
      e.preventDefault();
      $("#panel_modal_signup").modal();
    });
  });
</script>